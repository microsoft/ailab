        {
            "sourceFieldName": "metadata_custom_demoBoost",
            "targetFieldName": "demoBoost"
        },
        {
            "sourceFieldName": "metadata_custom_demoInitialPage",
            "targetFieldName": "demoInitialPage"
        }
    ],
    "outputFieldMappings": [
        {
            "sourceFieldName": "/document/finalText",
